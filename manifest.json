{
  "manifest_version": 2,
  "name": "VK-Pause",
  "short_name": "vk-pause",
  "version": "0.5.2",
  "icons": {
    "16": "images/icons/playing/16.png",
    "32": "images/icons/playing/32.png",
    "48": "images/icons/playing/48.png",
    "128": "images/icons/playing/128.png"
  },
  "options_page": "src/options.html",
  "permissions": [
    "storage",
    "tabs",
    "http://vk.com/*",
    "https://vk.com/*",
    "http://new.vk.com/*",
    "https://new.vk.com/*"
  ],

  "commands": {
    "playstop": {
      "suggested_key": {
        "default": "Ctrl+Shift+9",
        "mac": "Ctrl+Shift+9",
        "windows": "Ctrl+Shift+9",
        "linux": "Ctrl+Shift+9"
      },
      "description": "(global) Start/stop/next(double tap) vk music",
      "global": true
    },
    "localplaystop": {
      "suggested_key": {
        "default": "Alt+N",
        "mac": "Alt+N",
        "windows": "Alt+N",
        "linux": "Alt+N"
      },
      "description": "(local) Start/stop/next(double tap) vk music",
      "global": false
    }
  },

  "web_accessible_resources": ["images/*"],

  "background": {
    "scripts": [
      "lib/constants.js",
      "src/background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_title": "VK-Pause"
  },

  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*",
        "https://new.vk.com/*",
        "http://vk.com/*",
        "http://new.vk.com/*"
      ],
      "js": [
        "lib/jquery-2.1.4.js",
        "lib/constants.js",
        "src/content.js"
      ],
      "run_at":"document_end"
    }
  ]
}


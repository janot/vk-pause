{
  "manifest_version": 2,
  "name": "VK-Pause",
  "short_name": "vk-pause",
  "version": "0.4",
  "icons": {
    "16": "images/icons/play/16.png",
    "32": "images/icons/play/32.png",
    "48": "images/icons/play/48.png",
    "128": "images/icons/play/128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "http://vk.com/*",
    "https://vk.com/*",
    "http://new.vk.com/*",
    "https://new.vk.com/*"
  ],

  "commands": {
    "switchState": {
      "suggested_key": {
        "default": "Alt+N",
        "mac": "Alt+N"
      },
      "description": "Start/stop vk music"
    }
  },

  "web_accessible_resources": ["images/*"],

  "background": {
    "scripts": [
      "lib/constants.js",
      "src/background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_title": "VK-Pause"
  },

  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*",
        "https://new.vk.com/*",
        "http://vk.com/*",
        "http://new.vk.com/*"
      ],
      "js": [
        "lib/jquery-2.1.4.js",
        "lib/constants.js",
        "src/content.js"
      ]
    }
  ]
}
